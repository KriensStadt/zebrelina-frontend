{% extends 'layout_empty.html.twig' %}

{% block body %}
    <div class="flex min-h-full flex-col justify-center py-12 sm:px-6 lg:px-8">
        {% block header %}
            <div class="sm:mx-auto sm:w-full sm:max-w-md">
                <h2 class="mt-6 text-center text-3xl font-bold tracking-tight text-gray-900">{% block title %}{% endblock %}</h2>

                {% if block('subtitle') is defined %}
                    <p class="mt-2 text-center text-sm text-gray-600">{{ block('subtitle') }}</p>
                {% endif %}
            </div>
        {% endblock %}

        {% block content %}
        <div class="mt-8 sm:mx-auto sm:w-full sm:max-w-md">
            <div class="bg-white py-8 px-4 shadow sm:rounded-lg sm:px-10">
                {% block card %}{% endblock %}
            </div>
        </div>
        {% endblock %}
    </div>
{% endblock %}
