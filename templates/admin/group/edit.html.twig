{% extends 'admin/layout.html.twig' %}

{% block title %}Edit Group{% endblock %}
{% block subtitle %}Edit group {{ group.name }}{% endblock %}

{% block buttons %}
    {{ component('back_link', {href: path('admin.group.index')}) }}
{% endblock %}

{% block content %}
    {{ form_start(form) }}
    {% component card %}
        {% block card_body %}
            {{ form_row(form.name) }}
            {{ form_row(form.password) }}
            {{ form_row(form.devices) }}
        {% endblock %}

        {% block card_footer %}
            <div class="flex flex-col items-end">
                {{ component('button', {type: 'primary', label: 'global.save'|trans}) }}
            </div>
        {% endblock %}
    {% endcomponent %}
    {{ form_end(form) }}
{% endblock %}
