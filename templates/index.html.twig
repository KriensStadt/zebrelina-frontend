{% extends 'layout_empty.html.twig' %}

{% block body %}
    <div class="min-h-screen flex flex-col">
        <main class="grow flex items-center justify-center">
            <div class="flex flex-col">
                <div class="text-center text-3xl font-bold mb-3">{{ 'index.title'|trans }}</div>
                <div>
                    {{ component('button', {label: 'index.goto_admin'|trans, href: path('admin.index'), type: 'primary'}) }}
                    {{ component('button', {label: 'index.goto_device'|trans, href: path('device.index'), type: 'default'}) }}
                    {{ component('button', {label: 'index.goto_group'|trans, href: path('group.index'), type: 'default'}) }}
                </div>
            </div>
        </main>
        <footer class="shrink">
            <div class="mx-auto max-w-7xl py-1 px-2 sm:px-6 lg:px-8">
                <div class="text-center text-xs text-gray-800">&copy; {{ 'today'|date('Y') }} StadtKriens</div>
            </div>
        </footer>
    </div>
{% endblock %}
