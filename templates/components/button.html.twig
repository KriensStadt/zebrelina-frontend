{% set classes = 'inline-flex justify-center rounded-xl border border-transparent py-2 px-4 text-xs font-medium text-black shadow-sm focus:outline-none focus:ring-2 focus:ring-offset-2' %}

{% if type == 'primary' %}
    {% set classes = classes ~ ' bg-zebrelina-light-blue hover:bg-zebrelina-dark-blue focus:ring-zebrelina-dark-blue' %}
{% elseif type == 'danger' %}
    {% set classes = classes ~ ' bg-red-600 hover:bg-red-700 focus:ring-red-500' %}
{% else %}
    {% set classes = classes ~ ' bg-white hover:bg-black hover:text-white focus:ring-black' %}
{% endif %}

{% if stretch %}
    {% set classes = classes ~ ' w-full ' %}
{% endif %}

{% if href %}
    <a class="{{ classes }}" href="{{ href }}" {% if disabled %}style="opacity: 0.6; cursor: not-allowed"{% endif %}>{{ label }}</a>
{% else %}
    <button class="{{ classes }}" {% if disabled %}disabled="disabled" style="opacity: 0.6; cursor: not-allowed"{% endif %}>{{ label }}</button>
{% endif %}
