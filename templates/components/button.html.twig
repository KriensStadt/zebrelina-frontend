{% set classes = 'inline-flex justify-center rounded-md border border-transparent py-2 px-4 text-xs font-medium text-white shadow-sm focus:outline-none focus:ring-2 focus:ring-offset-2' %}

{% if type == 'primary' %}
    {% set classes = classes ~ ' bg-indigo-600 hover:bg-indigo-700 focus:ring-indigo-500' %}
{% elseif type == 'danger' %}
    {% set classes = classes ~ ' bg-red-600 hover:bg-red-700 focus:ring-red-500' %}
{% else %}
    {% set classes = classes ~ ' bg-gray-600 hover:bg-gray-700 focus:ring-gray-500' %}
{% endif %}

{% if stretch %}
    {% set classes = classes ~ ' w-full ' %}
{% endif %}

{% if href %}
    <a class="{{ classes }}" href="{{ href }}" {% if disabled %}style="opacity: 0.6; cursor: not-allowed"{% endif %}>{{ label|trans }}</a>
{% else %}
    <button class="{{ classes }}" {% if disabled %}disabled="disabled" style="opacity: 0.6; cursor: not-allowed"{% endif %}>{{ label|trans }}</button>
{% endif %}
