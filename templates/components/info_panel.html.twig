    bg-yellow-100 text-yellow-400 text-yellow-800 text-yellow-700 border-yellow-200
    bg-red-100 text-red-400 text-red-800 text-red-700 border-red-200
    bg-blue-100 text-blue-400 text-blue-800 text-blue-700 border-blue-200
    bg-green-100 text-green-400 text-green-800 text-green-700 border-green-200
#}

<div class="rounded-md bg-{{ color }}-100 border border-{{ color }}-200 py-2 px-4 mb-2">
    <div class="flex">
        <div class="flex-grow mr-3">
            {% if title %}
                <h3 class="text-sm font-bold text-{{ color }}-700">{{ title }}</h3>
            {% endif %}

            <div class="text-sm text-{{ color }}-700">
                <p>{{ text }}</p>
            </div>
        </div>
        <div class="flex-shrink-0 flex items-center">
            <svg class="h-5 w-5 text-{{ color }}-400" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                <path fill-rule="evenodd" d="M8.485 2.495c.673-1.167 2.357-1.167 3.03 0l6.28 10.875c.673 1.167-.17 2.625-1.516 2.625H3.72c-1.347 0-2.189-1.458-1.515-2.625L8.485 2.495zM10 5a.75.75 0 01.75.75v3.5a.75.75 0 01-1.5 0v-3.5A.75.75 0 0110 5zm0 9a1 1 0 100-2 1 1 0 000 2z" clip-rule="evenodd" />
            </svg>
        </div>
    </div>
</div>

